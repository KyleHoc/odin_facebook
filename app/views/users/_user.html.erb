<%= form_for @user do |form| %>
  <div>
    <% if @user.avatar %>
      <%= image_tag(@user.avatar, :size => "70x70") %>
    <% else %>
      No avatar
    <% end %>
    <%= form.file_field :avatar %>
  </div>

  <div>
    <%= form.label :bday, style: "display: block" %>
    <%= form.date_field :bday %>
  </div>

  <div>
    <%= form.label :location, style: "display: block" %>
    <%= form.text_field :location %>
  </div>

  <div>
    <%= form.label :occupation, style: "display: block" %>
    <%= form.text_field :occupation %>
  </div>

  <div>
    <%= form.label :bio, style: "display: block" %>
    <%= form.text_area :bio %>
  </div>

  <div>
    <%= form.submit "Update" %>
  </div>
<% end %>